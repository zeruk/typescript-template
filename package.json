{
  "name": "typescript-template",
  "version": "1.0.0",
  "description": "Ideal github nodejs typescript template",
  "main": "index.js",
  "scripts": {
    "test": "xo && jest",
    "ci:test": "prettier --check \"*/**/*.{ts,js,json}\" && xo && jest --coverage",
    "build": "tsc",
    "prepare": "husky ./.husky || true"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zeruk/typescript-template.git"
  },
  "author": "Ilya Shevchenko",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zeruk/typescript-template/issues"
  },
  "homepage": "https://github.com/zeruk/typescript-template#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.4.1",
    "@commitlint/config-conventional": "^19.4.1",
    "@jest/globals": "^29.5.0",
    "@tsconfig/recommended": "^1.0.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-sonarjs": "^0.19.0",
    "husky": "^9.1.5",
    "jest": "^29.5.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "typescript": "^5.5.4",
    "xo": "^0.54.2"
  },
  "xo": {
    "envs": [
      "node"
    ],
    "ignores": [
      "commitlint.config.js",
      "prettier.config.js",
      "jest.config.js"
    ],
    "extends": [
      "plugin:sonarjs/recommended",
      "prettier"
    ],
    "plugins": [
      "sonarjs"
    ],
    "space": true,
    "semicolon": false,
    "rules": {
      "import/extensions": 0
    }
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"],
    "rules": {
      "body-max-line-length": [1, "always", 130]
    }
  }
}

{
  "name": "typescript-template",
  "version": "1.0.0",
  "description": "Ideal github nodejs typescript template",
  "main": "index.js",
  "scripts": {
    "test": "prettier --check \"*/**/*.{ts,js,json}\" && xo && jest",
    "build": "tsc",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zeruk/typescript-template.git"
  },
  "author": "Ilya Shevchenko",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zeruk/typescript-template/issues"
  },
  "homepage": "https://github.com/zeruk/typescript-template#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@jest/globals": "^29.5.0",
    "@tsconfig/recommended": "^1.0.2",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-sonarjs": "^0.19.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3",
    "xo": "^0.54.2"
  },
  "xo": {
    "envs": [
      "node"
    ],
    "ignores": [
      "commitlint.config.js",
      "prettier.config.js",
      "jest.config.js"
    ],
    "extends": [
      "plugin:sonarjs/recommended",
      "prettier"
    ],
    "plugins": [
      "sonarjs"
    ],
    "space": true,
    "semicolon": false,
    "rules": {
      "import/extensions": 0
    }
  }
}
